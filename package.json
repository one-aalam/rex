{
  "name": "root",
  "version": "0.1.0",
  "description": "",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": "Aftab Alam <hello@aalam.in> (https://aalam.in)",
  "license": "MIT",
  "scripts": {
    "start": "lerna run start --parallel",
    "build": "lerna run build --reject-cycles",
    "test": "lerna run test --reject-cycles",
    "watch": "lerna run watch --parallel --reject-cycles",
    "bootstrap": "lerna bootstrap --reject-cycles --force-local",
    "postinstall": "npm run bootstrap",
    "bs": "npm run bootstrap",
    "lint": "lerna run lint",
    "release": "cross-env HUSKY_BYPASS=true lerna publish"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "tsdx": "^0.13.2",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  }
}
